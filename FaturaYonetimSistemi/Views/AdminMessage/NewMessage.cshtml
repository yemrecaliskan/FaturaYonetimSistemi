@model Message
@{
    ViewData["Title"] = "NewMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("NewMessage", "AdminMessage", FormMethod.Post))
{
<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">Yeni Mesaj Oluştur</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="form-group">
            @Html.Label("Alıcı mail:")
            @Html.TextBoxFor(model => model.ReceiverMail, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ReceiverMail)
        </div>
        <div class="form-group">
            @Html.Label("Konu:")
            @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Subject)
        </div>
        <div class="form-group">
            @Html.Label("Mesajınız:")
            @Html.TextAreaFor(model => model.MessageContent, new { @class = "form-control"})
            @Html.ValidationMessageFor(x => x.MessageContent, "", new { @class = "text-danger" })
        </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
        <div class="float-right">
            <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
        </div>
    </div>
    <!-- /.card-footer -->
</div> <!-- /.card -->}