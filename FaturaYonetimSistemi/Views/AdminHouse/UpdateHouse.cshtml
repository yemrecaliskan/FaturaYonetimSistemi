@model House

@{
    ViewData["Title"] = "UpdateHouse";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <!-- jquery validation -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Ev Güncelle</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <div class="card-body">
            @using (Html.BeginForm("UpdateHouse", "AdminHouse", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.Label("House ID:")
                    @Html.TextBoxFor(x => x.HouseID, new { @class = "form-control", @readonly = "readonly" })
                    <br />
                    @Html.Label("Blok:")
                    @Html.TextBoxFor(x => x.Block, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Block)
                    <br />
                    @Html.Label("Kat:")
                    @Html.TextBoxFor(x => x.Layer, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Layer)
                    <br />
                    @Html.Label("Tipi:")
                    @Html.TextBoxFor(x => x.Type, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Type)
                    <br />
                    @Html.Label("Numarası:")
                    @Html.TextBoxFor(x => x.HouseNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.HouseNumber)
                    <br />
                    <button class="btn btn-primary">Ekle</button>
                </div>
            }
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>