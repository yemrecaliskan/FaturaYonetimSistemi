@model List<House>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">

            <div class="card bg-light d-flex flex-fill">
                <div class="card-header text-muted border-bottom-0">
                    <b>Ev ID:</b> @item.HouseID
                </div>
                <div class="card-body pt-0">
                    <div class="row">
                        <div class="col-12">
                            <p class="text-muted text-sm"><b>Blok: </b> @item.Block </p>
                            <p class="text-muted text-sm"><b>Tipi: </b> @item.Type </p>
                            <p class="text-muted text-sm"><b>Kat: </b> @item.Layer </p>
                            <p class="text-muted text-sm"><b>Ev Numarası: </b> @item.HouseNumber </p>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-right">
                        <a href="/AdminHouse/UpdateHouse/@item.HouseID" class="btn btn-sm bg-teal">
                            <i class="fas fa-pen-square"></i> Güncelle
                        </a>
                        <a href="/AdminHouse/DeleteHouse/@item.HouseID" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> Sil
                        </a>
                    </div>
                </div>
            </div>

        </div>
    }
</div>
<a href="/AdminHouse/AddHouse/" class="btn btn-info">Yeni Ev Oluştur</a>
<br />